<UserControl x:Class="User.PluginSdkDemo.SettingsControlDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User.PluginSdkDemo"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins" mc:Ignorable="d" 
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins" 
             d:DesignHeight="900" d:DesignWidth="1400">

    <Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="46"/>
			<RowDefinition Height="46"/>
			<RowDefinition Height="46"/>
			<RowDefinition Height="46"/>
			<RowDefinition Height="46"/>
			<RowDefinition Height="46"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1400"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		
		
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" Text="Serial port selection:" Grid.Row="1" Width="180" />

		<ComboBox x:Name="SerialPortSelection" SelectionChanged="SerialPortSelectionChanged" Margin="5" Grid.Column="1" Grid.Row="1"
                  Width="300" HorizontalAlignment="Left"
                  ItemsSource="{Binding}" DisplayMemberPath="Display" SelectedValuePath="Value"/>

		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" Text="Connect to pedal" Grid.Row="2" Width="180" />
		<CheckBox x:Name="ConnectToPedal" Click="ConnectToPedal_click" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2"
                  Width="300"
                  Height="25" Margin="5" VerticalAlignment="Top"/>


		<styles:SHButtonPrimary Click="ResetPedalPosition_click" HorizontalAlignment="Left" Grid.Row="3">Reset pedal position</styles:SHButtonPrimary>

		<ui:TitledSlider
			Title="Travel distance"
			Minimum="0"
			Maximum="100"
			Value="{Binding Path=TravelDistance, Mode=TwoWay}"
			TitleTooltip="The relative travel distance the pedal can go"
			HorizontalAlignment="Left"
			Grid.Row="4"
			Width="300"
			Margin="0,0,0,0"
                  />

		<ui:TitledSlider
			Title="Pedal force"
			Minimum="0"
			Maximum="100"
			Value="{Binding Path=PedalForce, Mode=TwoWay}"
			TitleTooltip="The relative pedal force"
			HorizontalAlignment="Center"
			Grid.Row="4"
			Width="300"
			Margin="0,0,0,0"
                  />

		<ui:TitledSlider
			Title="Pedal min position"
			Minimum="0"
			Maximum="100"
			Value="{Binding Path=PedalMinPosition, Mode=TwoWay}"
			TitleTooltip="The relative pedal force"
			HorizontalAlignment="Left"
			Grid.Row="5"
			Width="300"
			Margin="0,0,0,0"
                  />

		<ui:TitledSlider
			Title="Pedal max position"
			Minimum="0"
			Maximum="100"
			Value="{Binding Path=PedalMaxPosition, Mode=TwoWay}"
			TitleTooltip="The relative pedal force"
			HorizontalAlignment="Center"
			Grid.Row="5"
			Width="300"
			Margin="0,0,0,0"
                  />






    </Grid>
</UserControl>
