<UserControl x:Class="User.PluginSdkDemo.SettingsControlDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User.PluginSdkDemo"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins" mc:Ignorable="d" 
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins" 
             d:DesignHeight="900" d:DesignWidth="1400">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="46"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="500,0,0,0" Text="Serial port selection:" Grid.Row="0" Grid.Column="0" Width="180" />

        <ComboBox x:Name="SerialPortSelection" SelectionChanged="SerialPortSelectionChanged" Margin="200,0,0,0"  Grid.Row="0" Grid.Column="0"
                  Width="120" HorizontalAlignment="Left"
                  ItemsSource="{Binding}" DisplayMemberPath="Display" SelectedValuePath="Value"/>

        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,350,0" Text="Connect to pedal" Grid.Row="0" Grid.Column="0" Width="100" Grid.ColumnSpan="2" />
        <CheckBox x:Name="ConnectToPedal" Click="ConnectToPedal_click" Grid.Column="0" HorizontalAlignment="Right" Grid.Row="0"
                  Width="50"
                  Height="25" Margin="100,20,0,0" VerticalAlignment="Top"/>





        <styles:SHButtonPrimary Click="UpdateSerialPortList_click" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" Width="180" >Update serial port list</styles:SHButtonPrimary>


        <styles:SHButtonPrimary Click="ResetPedalPosition_click" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" Width="180" >Reset pedal position</styles:SHButtonPrimary>
        <styles:SHButtonPrimary Click="SendConfigToPedal_click" HorizontalAlignment="Left" Grid.Row="2"  Grid.Column="0" Width="180" >Send config to pedal</styles:SHButtonPrimary>
        <styles:SHButtonPrimary Click="SaveStructToJson_click" HorizontalAlignment="Left" Grid.Row="3"  Grid.Column="1" Width="180" >Save config to JSON</styles:SHButtonPrimary>
        <styles:SHButtonPrimary Click="ReadStructFromJson_click" HorizontalAlignment="Right" Grid.Row="3"  Grid.Column="1" Width="180" >Read config from JSON</styles:SHButtonPrimary>

        <TextBox x:Name="TextBox1" Grid.Column="2" HorizontalAlignment="Left" Margin="54,0,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="336" AutomationProperties.Name="TextBox2" Height="138" Grid.RowSpan="3"/>






        <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="Pedal min force:" 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Width="120" 
                   Foreground="White"/>
        <Slider x:Name="PedalMinForce_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="4" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_PedalMinForce" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="10" RenderTransformOrigin="0.508,0.525"
            Value="8"
            />


        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="Pedal max force:" 
                   Grid.Row="4" 
                   Grid.Column="0" 
                   Width="120" 
                   Foreground="White"/>
        <Slider x:Name="PedalMaxForce_Slider" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="4" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_PedalMaxForce" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="255"
            TickPlacement="BottomRight"
			TickFrequency="10" RenderTransformOrigin="0.508,0.525"
            Value="73"
            />


        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="Pedal max position:" 
                   Grid.Row="4" 
                   Grid.Column="1" 
                   Width="120" 
                   Foreground="White"/>
        <Slider x:Name="PedalMaxPos_Slider" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="4" 
            Grid.Column="1" 
            Width="120" 
            ValueChanged="Slider_PedalMaxPos" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="10" RenderTransformOrigin="0.508,0.525"
            Value="86"
            />

        <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="Pedal min position:" 
                   Grid.Row="4" 
                   Grid.Column="1" 
                   Width="120" 
                   Foreground="White"/>
        <Slider x:Name="PedalMinPos_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="4" 
            Grid.Column="1" 
            Width="120" 
            ValueChanged="Slider_PedalMinPos" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="10" RenderTransformOrigin="0.508,0.525"
            Value="41"
            />




        <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="ABS amplitude:" 
                   Grid.Row="5" 
                   Grid.Column="0" 
                   Width="180" 
                   Foreground="White"/>
        <Slider x:Name="PedalAbsAmplitude_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="5" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_AbsAmplitude" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="255"
            TickPlacement="BottomRight"
			TickFrequency="30" RenderTransformOrigin="0.508,0.525"
            Value="63"
            />



        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="ABS frequency:" 
                   Grid.Row="5" 
                   Grid.Column="0" 
                   Width="120" 
                   Foreground="White"/>
        <Slider x:Name="PedalAbsFrequency_Slider" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="5" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_AbsFrequency" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="30"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="13"
            />


        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5,0,0,0" Text="ABS test signal" Grid.Row="5" Grid.Column="0" Width="120" />
        <CheckBox x:Name="TestAbs" Click="TestAbs_click" Grid.Column="0" HorizontalAlignment="Right" Grid.Row="5"
                  Width="100"
                  Height="35" Margin="10,10,0,0" VerticalAlignment="Top"/>



        <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="Dampening:" 
                   Grid.Row="6" 
                   Grid.Column="0" 
                   Width="120" 
                   Foreground="White"/>
        <Slider x:Name="PedalDampening_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="5,0,0,0" 
            Grid.Row="6" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Dampening" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="255"
            TickPlacement="BottomRight"
			TickFrequency="30" RenderTransformOrigin="0.508,0.525"
            Value="0"
            />



        <Canvas Height="100" Width="400" Background="#FF333333" HorizontalAlignment="Center" Grid.Row="8" Opacity="0.5" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Margin="0,90,0,0" Grid.Column="1" >
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>



            <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Text="Force ->" 
                   Width="60" 
                   Foreground="White" RenderTransformOrigin="0.5,0.5" Canvas.Left="-40" Canvas.Top="35">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>


            <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Text="Travel ->" 
                   Width="60" 
                   Foreground="White" RenderTransformOrigin="0.5,0.5" Canvas.Left="170" Canvas.Top="105">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>



            <Polyline x:Name="Polyline_BrakeForceCurve"
                      Height="400" Width="400"
                    Points="0,0 80,20 160,40 240,60 320,80 400,100"
                    Stroke="#FF1585B5"
                    StrokeThickness="4" RenderTransformOrigin="1,0.5" Canvas.Top="-300" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <Polyline.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0"/>
                    </TransformGroup>
                </Polyline.RenderTransform>
            </Polyline>

        </Canvas>






        <TextBlock HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="5,0,0,0" 
                   Text="Force curve adjusment:" 
                   Grid.Row="8" 
                   Grid.Column="0" 
                   Width="120" 
                   Foreground="White"/>

        <Slider x:Name="PedalForceCurve000_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="5,20,0,0" 
            Grid.Row="8" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Force000" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="0"
            />
        <Slider x:Name="PedalForceCurve020_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="5,50,0,0" 
            Grid.Row="8" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Force020" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="20"
            />
        <Slider x:Name="PedalForceCurve040_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="5,80,0,0" 
            Grid.Row="8" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Force040" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="40"
            />
        <Slider x:Name="PedalForceCurve060_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="5,110,0,0" 
            Grid.Row="8" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Force060" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="60"
            />
        <Slider x:Name="PedalForceCurve080_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="5,140,0,0" 
            Grid.Row="8" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Force080" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="80"
            />
        <Slider x:Name="PedalForceCurve100_Slider" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="5,170,0,0" 
            Grid.Row="8" 
            Grid.Column="0" 
            Width="120" 
            ValueChanged="Slider_Force100" 
            AutoToolTipPlacement="TopLeft" 
            AutoToolTipPrecision="0"
            Minimum="0"
			Maximum="100"
            TickPlacement="BottomRight"
			TickFrequency="5" RenderTransformOrigin="0.508,0.525"
            Value="100"
            />
        <ComboBox x:Name="ComboBox_JsonFileSelected" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="179" Margin="5,0,0,0" >
            <ComboBoxItem IsSelected="True">DiyPedalConfig_1</ComboBoxItem>
            <ComboBoxItem>DiyPedalConfig_2</ComboBoxItem>
            <ComboBoxItem>DiyPedalConfig_3</ComboBoxItem>
        </ComboBox>
        <!--<TabControl>
            <TabItem Header="Clutch" FontSize="12">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Brake" FontSize="12">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Gas" FontSize="8">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>-->







    </Grid>
</UserControl>
